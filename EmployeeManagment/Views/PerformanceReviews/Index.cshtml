@model IEnumerable<EmployeeManagment.Models.PerformanceReview>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-info" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Email)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ReviewID" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReviewID" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReviewID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
