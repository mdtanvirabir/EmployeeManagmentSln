@model IEnumerable<EmployeeManagment.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-danger">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
